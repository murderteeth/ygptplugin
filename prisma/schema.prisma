generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["jsonProtocol"]
}

datasource db {
  provider          = "postgresql"
  url               = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl         = env("POSTGRES_URL_NON_POOLING") // uses a direct connection
  shadowDatabaseUrl = env("POSTGRES_URL_NON_POOLING") // used for migrations
}

model Vault {
  chain_id                   Int
  address                    String
  version                    String
  name                       String
  token_symbol               String
  tvl_in_usd                 Float
  net_annual_percent_yield   Float
  gross_annual_percent_yield Float
  deposit_token_name         String
  deposit_token_symbol       String
  deposit_token_description  String
  deposit_token_price        Float
  strategies                 Strategy[]
  updated_at                 DateTime   @default(now())

  @@id([chain_id, address])
}

model Strategy {
  chain_id                Int
  address                 String
  name                    String
  description             String
  net_annual_percent_rate Float
  withdrawal_queue_index  Int
  vault                   Vault  @relation(fields: [chain_id, address], references: [chain_id, address])

  @@id([chain_id, address])
}
